<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SmartRobotApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primary</item>

        <item name="android:navigationBarColor">@color/primary</item>
    </style>

    <style name="backgroundTheme">
        <item name="android:background">@color/black</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="buttonColor">
        <item name="backgroundTint">@color/hornPressButton</item>
    </style>

    <style name="seekbarColor">
        <item name="android:thumbTint">@color/hornPressButton</item>
        <item name="android:progressTint">@color/hornPressButton</item>
    </style>

    <style name="cardColor">
        <item name="cardBackgroundColor">@color/white</item>
    </style>
</resources>